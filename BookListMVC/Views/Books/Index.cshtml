
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3 offset-3">
        @*asp-controller="" WILL CREATE A HOME CONTROLLER LINK !!*@
        @*REMOVE THE TAGE ALTOGETHER TO RENDER A CORRESPONDING CONTROLLER I.E BOOKS*@
        <a asp-action="Upsert" class="btn btn-info form-control text-white">
            Add New Book
        </a>
    </div>
</div>
<div class="row">
    <div class="col-12 border p-3">
        <table id="dtBooks" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/bookList.js"></script>
}

